<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/myTopLinear"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="128dp"
            android:layout_marginTop="10dp"

            android:layout_weight="0"
            android:padding="20dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/home_icon" />


    </LinearLayout>

    <TextView
        android:id="@+id/txtBrowse"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:text="Browse Latest Properties"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTopLinear" />

    <LinearLayout
        android:id="@+id/myLMainLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBrowse">


        <LinearLayout
            android:id="@+id/card_1"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myTopLinear">

            <ImageView

                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:padding="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/property_1_img_1" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="Waterfront Acreage"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="3"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:layout_weight="0"
                            android:gravity="center"

                            android:text="bedrooms"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="2"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:layout_weight="0"
                            android:gravity="center"

                            android:text="bathrooms"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="1978"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:layout_weight="0"
                            android:gravity="center"

                            android:text="Built"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_2"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_1">


            <ImageView

                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:padding="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/property_2_img_1" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="2.98 acre property"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="2"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:layout_weight="0"
                            android:gravity="center"

                            android:text="bedrooms"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="2"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:layout_weight="0"
                            android:gravity="center"

                            android:text="bathrooms"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="2010"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:layout_weight="0"
                            android:gravity="center"

                            android:text="Built"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_3"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_2">


            <ImageView

                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:padding="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/property_3_img_1" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="LOOKING FOR PRIVACY"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:layout_weight="0"
                            android:gravity="center"
                            android:text="bedrooms"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="1"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:layout_weight="0"
                            android:gravity="center"

                            android:text="bathrooms"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:text="2002"
                            android:textSize="16sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:layout_weight="0"
                            android:gravity="center"

                            android:text="Built"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>